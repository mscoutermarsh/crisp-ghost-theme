        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
      <![endif]-->  
      {{{block "head"}}}  
      {{ghost_head}}
  </head>
  <body class="{{body_class}}">
    <header id="header">
      {{#if @blog.logo}}<a id="logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
      <h1><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
      <p>{{@blog.description}}</p>
      {{> follow}}
      {{> navigation}}
    </header>
    <main id="content">
      {{{body}}}
    </main>
    <footer id="footer">
      <section id="footer-message">&copy; {{date format='YYYY'}} {{@blog.title}}. All rights reserved. Powered by <a href="http://ghost.org" target="_blank">Ghost</a> and the <a href="https://github.com/kathyqian/crisp-ghost-theme" target="_blank">Crisp</a> theme.</section>
    </footer>
